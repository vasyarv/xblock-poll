<script id="checkpoll-results-template" type="text/html">
    <h3 class="poll-header">{{display_name}}</h3>
    <div class="poll-question-container">{{{question}}}</div>
    <ul class="poll-answers-results poll-results">
    {{#each tally}}
        <li class="poll-result">
            <div class="poll-result-input-container">
              <input id="answer-{{key}}" type="checkbox" disabled {{#if choices}}checked="True"{{/if}} />
            </div>
            {{#if any_img}}
                <div class="poll-image result-image">
                    <label for="answer-{{key}}" class="poll-image-label">
                        {{#if img}}
                          <img src="{{img}}" />
                        {{/if}}
                    </label>
                </div>
            {{/if}}
            <div class="percentage-gauge-container">
              <div class="percentage-gauge" style="width:{{percent}}%;">
                  <label class="poll-answer-label" for="answer-{{key}}">{{{answer}}}</label>
              </div>
            </div>
            <div class="poll-percent-container">
                <span class="poll-percent-display{{#if first}} poll-top-choice{{/if}}">{{percent}}%</span>
            </div>
        </li>
       {{^last}}
        <li class="poll-spacer">
        </li>
       {{/last}}
    {{/each}}
    </ul>
    <input class="input-main" type="button" name="poll-submit" value="Submit" disabled>
    <div class="poll-footnote">Results gathered from {{total}} respondent{{#if plural}}s{{/if}}.</div>

    {{#if can_view_private_results}}
    <div style="float: right;
    margin-left: 10px;
    padding: 5px 10px;
    border-radius: 5px;
    background-color: rgba(0,0,0,0.05);
    text-align: right;
    text-transform: uppercase;
    color: #646464;" class="view-results-button-wrapper"><a style="color: black;" class="download-results-button">Download results</a></div>
    {{/if}}
    {{#if feedback}}
        <hr />
        <h3 class="poll-header">Feedback</h3>
        <div class="poll-feedback">
            {{{feedback}}}
        </div>
    {{/if}}
</script>
